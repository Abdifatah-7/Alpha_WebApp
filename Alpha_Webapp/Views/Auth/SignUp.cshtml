@model SignUpFormModel

@{
    ViewData["Title"] = "Sign Up";
}


<div class="surface">
    <div class="form-header"><h1>Create Account</h1> </div>

    <div class="card-container">

        <form asp-controller="Auth" asp-action="SignUp" novalidate>



            <div class="form-input">
                <label asp-for="FullName"></label>
                <input asp-for="FullName">
                <span asp-validation-for="FullName"> </span>
            </div>

            <div class="form-input">
                <label asp-for="Email"></label>
                <input asp-for="Email">
                <span asp-validation-for="Email"> </span>
            </div>

            <div class="form-input">
                <label asp-for="Password"></label>
                <input asp-for="Password">
                <span asp-validation-for="Password"> </span>
            </div>

            <div class="form-input">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword"> </span>
            </div>

            <button class="btn btn-blue">Create Account</button>


            <div class="remember-me">
                <input type="checkbox" checked>
                <label asp-for="TermsAndConditions">I accept <a href="#">Terms and Conditions</a></label>
            </div>

        </form>

    </div>

    <div class="footer-text">Already have an account?  <a href="/login.html">Login</a></div>

</div>

@await Html.PartialAsync("_ValidationScripts")