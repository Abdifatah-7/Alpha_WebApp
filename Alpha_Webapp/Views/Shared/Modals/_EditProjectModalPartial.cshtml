@model EditProjectViewModel


<section id="edit-project-modal" class="modal">
    <div class="surface modal-container">

        <div class="modal-header">
            <h3>Edit Project</h3>
            <button data-target="edit-project-modal" data-type="close" class="close-btn">×</button>
        </div>

        <div class="modal-body">

            <form asp-action="" asp-controller=" " method="post" enctype="multipart/form-data" novalidate>


                <div class="upload-image">
                    <img class="image-icon" data-type="file" src="/Images/project-icon.svg" alt="Project Image">
                </div>

                <div class="form-input">
                    <label>Project Name</label>
                    <input type="text" placeholder="Project Name">
                    <span class="field-validation-error"> Required</span>
                </div>

                <div class="form-input">
                    <label>Client Name</label>
                    <input placeholder="Client Name">
                    <span class="field-validation-error"> Required</span>
                </div>

                <div class="form-input">
                    <label class="form-label">Description</label>
                    <textarea id="edit-project-description" class="hide">
                    <p>You need to develop an web application on that simulates a admin
                      portal for projects. It will need both a light mode design and a dark mode design.</p>
                  </textarea>
                    <div class="wysiwyg">
                        <div id="edit-project-description-wysiwyg-editor" class="wysiwyg-editor"></div>
                        <div id="edit-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div>


                <div class="date-container">

                    <div class="form-input">
                        <label> Start Date</label>
                        <input type="date">
                    </div>

                    <div class="form-input">
                        <label> End Date</label>
                        <input type="date">
                    </div>

                </div>


                <div class="select-input">
                    <label>Status</label>
                    <select>
                        <option selected>Started</option>
                        <option value="2">Compelet</option>
                    </select>
                </div>

                <div class="form-input">
                    <label>Budget</label>
                    <div class="form-input-extented">
                        <input type="text" class="form-input">
                        <i class="fa-duotone fa-solid fa-dollar-sign"></i>
                    </div>
                    <span class="field-validation-error"> Required</span>
                </div>

                <button type="submit" class="btn">Create</button>

            </form>

        </div>
    </div>
</section>